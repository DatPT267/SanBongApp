<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Đăng kí"
                android:textColor="#06000E"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/dkten"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_account_circle"
                android:drawablePadding="10dp"
                android:hint="Tên tài khoản"
                android:padding="20dp"
                android:textColorHint="#06000E" />

            <EditText
                android:id="@+id/dkemail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_drafts"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:padding="20dp"
                android:textColorHint="#06000E" />

            <EditText
                android:id="@+id/dkpass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColorHint="#06000E" />

            <EditText
                android:id="@+id/dkpass1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColorHint="#06000E" />

            <EditText
                android:id="@+id/dksdt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_local_phone"
                android:drawablePadding="10dp"
                android:hint="SĐT"
                android:padding="20dp"
                android:textColorHint="#06000E" />

            <EditText
                android:id="@+id/dkdiachi"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit"
                android:drawableLeft="@drawable/ic_home"
                android:drawablePadding="10dp"
                android:hint="Địa chỉ"
                android:padding="20dp"
                android:textColorHint="#06000E" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDangKi"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/buttton"
                    android:text="Đăng kí"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/btnCannel"
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttton"
                    android:text="Cannel"
                    android:textColor="#fff" />
            </LinearLayout>

            <TextView
                android:id="@+id/dangnhaplai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Bạn đã có tài khoản? Đăng nhập"
                android:textColor="#06000E"
                android:textSize="15dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>